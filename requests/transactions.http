Content-Type: application/json
Authorization: Bearer {{authToken}}

{
    "transactions": [
        {
            "userId": "{{userId1}}",
            "groupId": "{{groupId}}",
            "balanceId": "{{balanceId}}",
            "type": "move_out",
            "transactedAt": "2024-06-19T14:30:00Z",
